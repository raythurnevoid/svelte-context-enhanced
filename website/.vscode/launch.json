	"version": "0.2.0",
	"configurations": [
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "Debug build",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/node_modules/@sveltejs/kit/dist/cli.js",
			"runtimeArgs": [
				"--inspect",
				"--async-stack-traces"
			],
			"args": [
				"build"
			],
			"console": "integratedTerminal"
		}
	]
}